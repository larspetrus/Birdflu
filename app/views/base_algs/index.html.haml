%h1 Manage Algorithms

= button_to "Update Positions", { action: "update_positions" }, remote: true

=form_tag url_for(action: "combine"), method: 'post', remote: true do
  =submit_tag("Merge in selected Algs")
  %table.manage_algs
    %thead
      %th Name
      %th Moves
      %th Combos
    - @root_algs.each do |alg|
      %tr
        %td
          %label
            = check_box_tag 'rootalgs[]', alg.id unless @counts[alg.id]
            = alg.name
        %td= alg.moves
        %td
          - if @counts[alg.id]
            = "Combined #{@counts[alg.id]} times"
